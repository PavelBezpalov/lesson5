<%= javascript_tag do %>
    $(document).ready( function() {
      var Countdown<%= comment.id %> = $.countdown(function() {
        $('#countdown_<%= comment.id %>').html(this.getFormattedTime());
        if (this.isFinished()) {
          $("#<%= dom_id(comment) %> footer .countdown").remove();
          $("#<%= dom_id(comment) %> footer .comment-buttons").remove();
        }
      }, <%= comment.timeleft %>);
    });
<% end %>